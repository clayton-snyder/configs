set nu
set relativenumber

set tabstop=4
set softtabstop=4
set shiftwidth=4
set expandtab

set smartindent

set wrap

" CMS?set noswapfile
" CMS?set nobackup
set undodir=~/.vim/undo-dir
set undofile

set nohlsearch
set incsearch

set termguicolors

set scrolloff=8
set signcolumn

set updatetime=50

set colorcolumn="120"

nnoremap("<C-d>", "<C-d>zz")
nnoremap("<C-u>", "<C-u>zz")
nnoremap("n", "nzzzv")
nnoremap("N", "Nzzzv")

